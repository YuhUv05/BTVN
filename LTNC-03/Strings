#include <iostream>
#include <string>
using namespace std;

int main() {
	string a, b;
    cin >> a >> b;
    int lenA = a.size();
    int lenB = b.size();
    cout << lenA << " " << lenB << endl;
    
    string c = a + b;
    cout << c << endl;
    
    string a1 = a, b1 = b;
    a1[0] = b[0]; 
    b1[0] = a[0];
    cout << a1 << " " << b1;
    
    return 0;
}
